@model NeoWeb.Models.Blog

@{
    ViewData["Title"] = "Details";
    Layout = "_LayoutBlog.cshtml";
}

@section Styles{ 
    <link href="~/css/blog.css" rel="stylesheet"/>
}

<div>
    <ul class="col-lg-1 blog_date artical-date desktop-show" id="blogDate">
        <li class="m3">
            <a class="iconfont h2">2017</a>
            <ul>
                <li><a href="">1231</a></li>
            </ul>
        </li>
        <li class="m3">
