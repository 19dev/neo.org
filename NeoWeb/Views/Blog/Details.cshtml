        <div class="artical-content">
            <div>
                <h2>@Model.Title</h2>
                <div class="t2 m3">@Model.CreateTime.ToString()</div>
            </div>
            <div class="blog-content t2">
                @Html.Raw(Model.Content)
            </div>
        </div>

        <div class="nav-artical nav-artical-bottom p2">
            <div class="text-left"><a class="iconfont t1 back_list">&#xeaa4; </a></div>
            <div><a class="iconfont t1 back_top">&#xe600; </a></div>
            <div class="text-right"><a class="iconfont t1 prev-artical">&#xeaa5; </a><a class="iconfont t1 next-artical"> &#xeaa3;</a></div>
        </div>

    </div>
</div>

