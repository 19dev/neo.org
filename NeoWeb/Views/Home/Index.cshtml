@section Scripts{
    <script type="text/javascript" src="~/js/skrollr.js"></script>
    <script type="text/javascript">


        window.onload = function () {
            pageSize();

            if (/Mobile|Windows Phone|Lumia|Android|webOS|iPhone|iPod|Blackberry|PlayBook|BB10|Opera Mini|\bCrMo\/|Opera Mobi/i.test(navigator.userAgent)) {
            } else {
                skrollr.init({
                    edgeStrategy: 'set',
                    easing: {
                        WTF: Math.random,
                        inverted: function (p) {
                            return 1 - p;
                        }
                    }
                });
            }

            setTimeout(function () {
                $(".load-page").hide();
            }, 100);
            //兼容IE调整
            $("body").css("height", "auto");
        }

        $(window).resize(function () { 
            pageSize()
        });

        function pageSize() {
            $("#homeFri").each(function () {
                $(this).css("width", $(window).width());
                $(this).css("min-height", $(window).height());
            })
        }
    </script>
}
